{% extends 'base.html.twig' %}

{% block title %}Add Article{% endblock %}

{% block body %}
{% if not app.user %} 
       
    <a href="{{ path('security_login') }}"><button class="btn btn-success">Connexion</button></a>
        
{% else %}
<div class="container centHeight">
    <div class="row centHeight justify-content-center align-items-center">
        <div class="col-12">
            <h2>Ajouter un Article:</h2>
            {{ form_start(addArticle) }}
                <div class="form-group">
                    {{ form_row(addArticle.title, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(addArticle.category, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(addArticle.description, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(addArticle.image, {'attr': {'class': 'form-control upload', 'placeholder': 'Cliquez ici pour uploader une image'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(addArticle.price, {'attr': {'class': 'form-control'}}) }}
                </div>

                <button type="submit" class="btn btn-success">Ajouter</button>
            {{ form_end(addArticle) }}
        </div>
    </div>
</div>
{% endif %}   
{% endblock %}
